<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Grom_Slider/css/owl.carousel.min.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block name="homepage_slider" template="Grom_Slider::slider.phtml" before="-">
                <arguments>
                    <argument name="loop" xsi:type="boolean">false</argument>
                </arguments>
            </block>

            <block name="homepage_slider1" template="Grom_Slider::slider.phtml" before="-">
                <arguments>
                    <argument name="loop" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceContainer>

    </body>
</page>
